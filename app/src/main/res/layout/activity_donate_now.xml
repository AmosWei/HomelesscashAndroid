<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateNow">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="112dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon2" />

    <top.androidman.SuperButton
        android:id="@+id/money2"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_below="@+id/flag"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="234dp"
        app:color_normal="#dbdbdb"
        app:drawable_middle_height="50dp"
        app:drawable_middle_width="50dp"
        app:shape="CIRCLE"
        app:text="$2"
        app:textColor="@color/color_text_black"
        app:textSize="30sp" />

    <top.androidman.SuperButton
        android:id="@+id/money5"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_below="@+id/flag"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="234dp"
        android:layout_marginEnd="164dp"
        app:color_normal="#dbdbdb"
        app:drawable_middle_height="50dp"
        app:drawable_middle_width="50dp"
        app:shape="CIRCLE"
        app:text="$5"
        app:textColor="@color/color_text_black"
        app:textSize="30sp" />

    <top.androidman.SuperButton
        android:id="@+id/money10"
        android:layout_width="79dp"
        android:layout_height="76dp"
        android:layout_below="@+id/flag"
        android:layout_marginStart="285dp"
        android:layout_marginLeft="285dp"

        android:layout_marginTop="234dp"
        android:layout_marginEnd="285dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="285dp"
        app:color_normal="#dbdbdb"
        app:drawable_middle_height="50dp"
        app:drawable_middle_width="50dp"
        app:shape="CIRCLE"
        app:text="$10"
        app:textColor="@color/color_text_black"
        app:textSize="30sp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_DR2"
        android:layout_width="182dp"
        android:layout_height="91dp"
        android:layout_below="@+id/custom_acc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="215dp"
        android:layout_marginBottom="117dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#dbdbdb"
        fancy:fb_focusColor="#9bd823"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="DONATE"
        fancy:fb_textSize="35sp"
        fancy:fb_textColor="#000000" />

    <TextView
        android:id="@+id/infoDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:text="TextView"
        android:textSize="20sp"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentOption">



    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:outlineSpotShadowColor="@color/color_text_black"
        android:id="@+id/visaCheckBox"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/visaCheckBox"
        android:id="@+id/visaImage"
        app:srcCompat="@drawable/payment_visa"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visaCheckBox"
        android:id="@+id/paypalCheckBox"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/paypalImage"
        android:layout_toRightOf="@id/paypalCheckBox"
        android:layout_below="@id/visaImage"
        app:srcCompat="@drawable/paypal"/>

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paypalCheckBox"
        android:id="@+id/wwCheckBox"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:id="@+id/wwImage"
        android:layout_toRightOf="@+id/wwCheckBox"
        android:layout_below="@id/paypalImage"
        app:srcCompat = "@drawable/woolworth"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_below="@+id/wwImage"
        android:layout_centerHorizontal="true"
        android:id="@+id/cnButton"/>


</RelativeLayout>
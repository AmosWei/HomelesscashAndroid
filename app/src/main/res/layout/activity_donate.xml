<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donate">

    <top.androidman.SuperButton
        android:id="@+id/money_5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/flag"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        fancy:color_normal="#dbdbdb"
        fancy:drawable_middle_height="50dp"
        fancy:drawable_middle_width="50dp"
        fancy:shape="CIRCLE"
        fancy:text="$5"
        fancy:textColor="@color/color_text_black"
        fancy:textSize="30dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="spare some change"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/infoDisplay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <top.androidman.SuperButton
        android:id="@+id/money_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/flag"
        android:layout_marginVertical="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        app:color_normal="#dbdbdb"
        app:drawable_middle_height="50dp"
        app:drawable_middle_width="50dp"
        app:shape="CIRCLE"
        app:text="$2"
        app:textColor="@color/color_text_black"
        app:textSize="30dp" />

    <top.androidman.SuperButton
        android:id="@+id/money_10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/flag"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="200dp"
        android:layout_marginStart="285dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="285dp"
        app:color_normal="#dbdbdb"
        app:drawable_middle_height="50dp"
        app:drawable_middle_width="50dp"
        app:shape="CIRCLE"
        app:text="$10"
        app:textColor="@color/color_text_black"
        app:textSize="30dp" />


    <Button
        android:id="@+id/btnDonate"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/custom_acc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="133dp"
        android:text="Donate"
        android:textSize="30dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="270dp"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="309dp"
        android:layout_weight="1"
        android:textColor="@color/color_text_black"
        android:ems="10"
        android:hint="         custom amount"
        android:inputType="numberDecimal" />

</RelativeLayout>